cabal-version:       2.4
name:                ekg-forward
version:             0.1.0
synopsis:            See README for more info
description:         See README for more info
homepage:            https://github.com/input-output-hk/ekg-forward
bug-reports:         https://github.com/input-output-hk/ekg-forward/issues
license:             Apache-2.0
license-file:        LICENSE
copyright:           2021 Input Output (Hong Kong) Ltd.
author:              Denis Shevchenko
maintainer:          Denis Shevchenko <denis.shevchenko@iohk.io>
category:            System, Network
build-type:          Simple
extra-doc-files:     README.md
                     CHANGELOG.md

source-repository head
  type:                git
  location:            https://github.com/input-output-hk/ekg-forward.git

common common-options
  build-depends:       base >=4.12 && <5

  ghc-options:         -Wall
                       -Wcompat
                       -Widentities
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
  if impl(ghc >= 8.0)
    ghc-options:       -Wredundant-constraints
  if impl(ghc >= 8.2)
    ghc-options:       -fhide-source-paths
  if impl(ghc >= 8.4)
    ghc-options:       -Wmissing-export-lists
                       -Wpartial-fields

  default-language:    Haskell2010

library
  import:              common-options
  hs-source-dirs:      src

  exposed-modules:     System.Metrics.Acceptor
                       System.Metrics.Configuration
                       System.Metrics.Forwarder

  other-modules:       System.Metrics.Internal.Protocol.Type
                       System.Metrics.Internal.Protocol.Codec
                       System.Metrics.Internal.Protocol.Acceptor
                       System.Metrics.Internal.Protocol.Forwarder
                       System.Metrics.Internal.Request
                       System.Metrics.Internal.Response

  build-depends:         async
                       , bytestring
                       , cborg
                       , contra-tracer
                       , ekg-core
                       , io-sim-classes
                       , network
                       , ouroboros-network
                       , ouroboros-network-framework
                       , serialise
                       , text
                       , typed-protocols

executable demo-forwarder
  hs-source-dirs:      demo
  main-is:             forwarder.hs
  build-depends:         base
                       , ekg-forward
                       , text

  default-language:    Haskell2010
  ghc-options:         -Wall
                       -threaded
                       -rtsopts

executable demo-acceptor
  hs-source-dirs:      demo
  main-is:             acceptor.hs
  build-depends:         base
                       , ekg-forward
                       , text

  default-language:    Haskell2010
  ghc-options:         -Wall
                       -threaded
                       -rtsopts

test-suite ekg-forward-test
  import:              common-options
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       ekg-forward
  ghc-options:         -threaded
                       -rtsopts
                       -with-rtsopts=-N
