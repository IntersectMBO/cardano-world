#!/bin/sh -u

cwd=$(dirname "$0")

# shellcheck source=/dev/null
. "${cwd}/../core/common"

# shellcheck disable=SC2154
banner "${testname}"

error=0

# Create the genesis json file and required keys.
${CARDANO_CLI} shelley genesis key-gen-utxo \
    --verification-key-file "${TEST_DIR}/genesis-utxo.vkey" \
    --signing-key-file "${TEST_DIR}/genesis-utxo.skey"
fail_on_error $?

# tree "${TEST_DIR}"

assert_file_exists "${TEST_DIR}/genesis-utxo.vkey"

${CARDANO_CLI} shelley genesis initial-txin \
    --verification-key-file "${TEST_DIR}/genesis-utxo.vkey" \
    > "${TEST_DIR}/utxo-hash.hex"
fail_on_error $?

assert_line_count 1 "${TEST_DIR}/utxo-hash.hex"

report_result ${error}
