#!/bin/sh -u

cwd=$(dirname "$0")

# shellcheck source=/dev/null
. "${cwd}/../core/common"

# shellcheck disable=SC2154
banner "${testname}"

setup_data_dir "${testname}"

error=0

${CARDANO_CLI} shelley stake-address deregistration-certificate  \
    --verification-key-file "${DATA_DIR}/key-gen-staking.vkey" \
    --out-file "${TEST_DIR}/deregistration.cert"
fail_on_error $?

assert_file_exists "${TEST_DIR}/deregistration.cert"
assert_string 'DelegationCertificateShelley' "${TEST_DIR}/deregistration.cert"

#-----------------------------

report_result ${error}
